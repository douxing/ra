doctype html
html
  head
    title= title
    meta(charset="utf-8")
    script(src="//cdn.bootcss.com/jquery/2.1.1/jquery.js")
    script(src="//cdn.bootcss.com/angular.js/1.2.16/angular.js")
  body(data-ng-app="ra")
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container(data-ng-controller="NavBarController")
        .navbar-header
          a.navbar-brand(ui-sref="main") 无名
        ul.nav.navbar-nav
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown')
              span 数据
              b.caret
            ul.dropdown-menu
              li: a(data-ng-click='viewMatches()') 比赛历史
              li: a(data-ng-click='viewMatches(true)') 比赛历史(管理)
              li: a(data-ng-click='viewLast12()') 最近12场-古典算法
        ul.nav.navbar-nav
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown')
              span 操作
              b.caret
            ul.dropdown-menu
              li: a(data-ng-click='addUser()') 新球员
              li: a(data-ng-click='addMatchday()') 新比赛日
        ul.nav.navbar-nav.navbar-right(data-ng-hide="stateChanging")
          li(data-ng-hide="userService.id" data-ui-sref-active="active"): a(data-ui-sref="signin") 登录
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown")
              span 登录
                b.caret
            ul.dropdown-menu
              li: a(data-ng-click="confirmSignout()") 注销



    .main-ui-view(data-ui-view="main")

    link(rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.1.1/css/bootstrap.css")
    link(rel="stylesheet" href="//cdn.bootcss.com/ng-grid/2.0.11/ng-grid.min.css")
    link(rel='stylesheet' href='/css/default.css')
    link(rel='stylesheet' href='/css/table.css')

    script(src="//cdn.bootcss.com/angular-ui-bootstrap/0.11.0/ui-bootstrap-tpls.js")
    script(src="//cdn.bootcss.com/angular-ui-router/0.2.10/angular-ui-router.js")
    script(src="//cdn.bootcss.com/ng-grid/2.0.11/ng-grid.min.js")

    script(src="/js/module.js")
    script(src="/js/filters.js")
    script(src="/js/services.js")
    script(src="/js/controllers.js")






.container-fluid
  .row
    table.table
      thead
        tr
          th 球员 / 比赛日
          th(data-ng-repeat='matchday in capsule.matchdays')
            | 第
            span(data-ng-bind='matchday.id')
            | 比赛日
      tbody
        tr(data-ng-repeat='user in capsule.users')
          td(data-ng-bind='user.name')
          td(data-ng-repeat='matchday in user.matchdays')
            span(data-ng-if='matchday.scores[user._id] && capsule.manage'): a(data-ng-bind='matchday.scores[user._id]' data-ng-click='changeScore(user, matchday)')
            span(data-ng-if='matchday.scores[user._id] && !capsule.manage' data-ng-bind='matchday.scores[user._id]')
            span(data-ng-if='!matchday.scores[user._id] && capsule.manage'): a(data-ng-click='changeScore(user, matchday)') 无
            span(data-ng-if='!matchday.scores[user._id] && !capsule.manage')
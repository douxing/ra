.container
  .row
    table.table
      thead
        tr
          th 球员 / 比赛日
          th(data-ng-repeat='matchday in capsule.matchdays')
            | 第
            span(data-ng-bind='matchday.id')
            | 比赛日
      tbody
        tr(data-ng-repeat='user in capsule.users')
          td(data-ng-bind='user.name')
          td(data-ng-repeat='matchday in user.matchdays')
            span(data-ng-if='matchday[user._id] && capsule.edit' data-ng-bind='matchday[user._id]') 
            span(data-ng-if='matchday[user._id] && !capsule.edit' data-ng-bind='matchday[user._id]')
            span(data-ng-if='!matchday[user._id] && capsule.edit') 无
            span(data-ng-if='!matchday[user._id] && !capsule.edit') &hbsp;